
<LabelInfo@BoxLayout>:
    orientation: "horizontal"
    Label:
        size_hint: (0.3, 1)
        text: root.label_string
    Label:
        id: contenido_text

<ScrollableLabel>:
    Label:
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.width, None
        text: root.text

