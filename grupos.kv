<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
<RV>:
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: True

<Grupos>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.6
            Label:
                text: 'Lista de Grupos Pendientes'
            TextInput:
                id: ti_filtro
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    CheckBox:
                        group: 1
                    Label:
                        halign: 'left'
                        text: 'Todos'
                BoxLayout:
                    orientation: 'horizontal'
                    CheckBox:
                        group: 1
                    Label:
                        halign: 'left'
                        text: "Pendientes"

        RV:
            id: id_rv
            size_hint: (1, 8)
        Button:
            text: 'Volver'
            on_press: root.goto_dashboard()
