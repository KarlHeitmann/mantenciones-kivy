<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
<RV>:
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: True


<MCQCheckBox@CheckBox>:
    color: 0, 0, 0, 1
    size_hint: 0.15, 1


<MCQLabel@ButtonBehavior+Label>:
    text_size: self.size
    valign: 'center'
    font_size: '13sp'
    color: 0, 0, 0, 1


<MCQLabelCheckBox@BoxLayout>:
    text: ''
    group: ''

    MCQCheckBox:
        id: cb
        group: root.group

    MCQLabel:
        on_press: cb._do_press()
        text: root.text


<Grupos>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.6
            Label:
                text: 'Lista de Grupos Pendientes'
            TextInput:
                id: ti_filtro
            BoxLayout:
                orientation: 'vertical'
                MCQLabelCheckBox:
                    text:"option 1"
                    group: 'opts'

                MCQLabelCheckBox:
                    text:"option 2"
                    group: 'opts'
        RV:
            id: id_rv
            size_hint: (1, 8)
        Button:
            text: 'Volver'
            on_press: root.goto_dashboard()
