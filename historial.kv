<Historial>:
    BoxLayout:
        orientation: "vertical"
        # padding: (100, 100)
        BoxLayout:
            orientation: 'horizontal'
            # padding: (20, 0)
            size_hint: (1, 0.2)
            Button:
                text: 'Anterior'
                on_press: root.btn_anterior()
            Label:
                id: lbl_actual
            Button:
                text: 'Siguiente'
                on_press: root.btn_siguiente()
        Label:
            id: label_maintenance
            markup: True
        BoxLayout:
            # size_hint: (1, 3)
            Button:
                size_hint: (1, 0.2)
                text: 'Volver'
                on_press: root.volver()
