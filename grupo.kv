#: include informe.kv
#: include my_widgets.kv

<Grupo>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 8)
            BoxLayout:
                orientation: 'vertical'
                LabelInfo:
                    id: marca
                    label_string: "Marca: "
                LabelInfo:
                    id: potencia
                    label_string: "Potencia: "
                LabelInfo:
                    id: numero_de_serie
                    label_string: "Numero de Serie: "
                LabelInfo:
                    id: modelo
                    label_string: "Modelo: "
                Button:
                    id: btn_comenzar
                    text: "Comenzar"
                    on_press: root.btn_comenzar()
            BoxLayout:

                orientation: 'vertical'
                #RVInformeGuardado:
                #    size_hint: (1,7)
                #    id: id_rv_informe_guardado
                ScrollableLabel:
                    size_hint: (1, 7)
                    id: scrollable_label
                    Label:
                        text_size: self.size
                        id: lbl_scrollable_label
                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        text: 'Ver Reposo'
                        on_press: root.ver_reposo()
                    Button:
                        text: 'Ver Manual'
                        on_press: root.ver_manual()
                    Button:
                        text: 'Ver Autom√°tico'
                        on_press: root.ver_automatico()
                BoxLayout:
                    orientation: "horizontal"
                    Button:
                        id: btn_editar_reposo
                        text: 'Editar reposo'
                        disabled: True
                        on_press: root.btn_on_reposo()
                    Button:
                        id: btn_editar_manual
                        text: 'Editar manual'
                        disabled: True
                        on_press: root.btn_on_manual()
                    Button:
                        id: btn_editar_automatica
                        text: 'Editar automatica'
                        disabled: True
                        on_press: root.btn_on_automatico()

        BoxLayout:
            orientation: "horizontal"
            Button:
                text: 'Volver'
                on_press: root.btn_volver()
            Button:
                text: 'Enviar'
                on_press: root.btn_enviar()


