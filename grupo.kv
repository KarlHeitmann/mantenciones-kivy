#: include informe.kv

<LabelInfo@BoxLayout>:
    orientation: "horizontal"
    Label:
        size_hint: (0.3, 1)
        text: root.label_string
    Label:
        id: contenido_text

<ScrollableLabel>:
    Label:
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.width, None
        text: root.text

<Grupo>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 8)
            BoxLayout:
                orientation: 'vertical'
                LabelInfo:
                    id: marca
                    label_string: "Marca: "
                LabelInfo:
                    id: potencia
                    label_string: "Potencia: "
                LabelInfo:
                    id: numero_de_serie
                    label_string: "Numero de Serie: "
                LabelInfo:
                    id: modelo
                    label_string: "Modelo: "
            BoxLayout:

                orientation: 'vertical'
                #RVInformeGuardado:
                #    size_hint: (1,7)
                #    id: id_rv_informe_guardado
                ScrollableLabel:
                    #text = "asd qwe zxc ert fhd"
                    size_hint: (1, 7)
                    id: scrollable_label
                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        text: 'Ver Reposo'
                        on_press: root.ver_reposo()
                    Button:
                        text: 'Ver Manual'
                        on_press: root.ver_manual()
                    Button:
                        text: 'Ver Autom√°tico'
                        on_press: root.ver_automatico()
                BoxLayout:
                    orientation: "horizontal"
                    Button:
                        text: 'Editar reposo'
                        on_press: root.btn_on_reposo()
                    Button:
                        text: 'Editar manual'
                        on_press: root.btn_on_manual()
                    Button:
                        text: 'Editar automatica'
                        on_press: root.btn_on_automatico()

        BoxLayout:
            orientation: "horizontal"
            Button:
                text: 'Volver'
                on_press: root.btn_volver()
            Button:
                text: 'Enviar'
                on_press: root.btn_enviar()


