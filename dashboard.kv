#: include my_widgets.kv

<Dashboard>
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint: (1, 8)
            markup: True
            id: lbl_main
        BoxLayout:
            Button:
                text: 'Cerrar Sesión'
                on_press: root.btn_cerrar_sesion()
            Button:
                text: "Ver grupos"
                on_press: root.goto_grupos()
            Button:
                text: 'Nuevo informe\nde mantención'
                on_press: root.goto_informe()
            Button:
                text: "Ver historial"
                on_press: root.goto_historial()


