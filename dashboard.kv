#: include my_widgets.kv

<Dashboard>
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 4
            Label:
                size_hint: (1, 1)
                text: "Marca: "
            Label:
                id: marca
            Label:
                size_hint: (1, 1)
                text: "Potencia: "
            Label:
                id: potencia
            Label:
                size_hint: (1, 1)
                text: "Modelo: "
            Label:
                id: modelo
            Label:
                size_hint: (1, 1)
                text: "Número de serie: "
            Label:
                id: numero_de_serie
            Button:
                text: 'Cerrar Sesión'
                on_press: root.btn_cerrar_sesion()
            Button:
                text: "Ver grupos"
                on_press: root.goto_grupos()
            Button:
                text: 'Nuevo informe\nde mantención'
                on_press: root.goto_informe()
            Button:
                text: "Ver historial"
                on_press: root.goto_historial()


